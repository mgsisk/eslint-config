{
  "name": "@mgsisk/eslint-config",
  "version": "0.6.1",
  "description": "Opinionated ESLint configurations for JavaScript development.",
  "main": "index.js",
  "scripts": {
    "clean": "find . -name '*.DS_Store' -type f -delete",
    "lint.js": "eslint -c index.js '**/*.js' '**/.*.js'",
    "lint.json": "jsonlint-cli '**/*.json' '**/.*.json'",
    "lint.md": "remark .",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "preversion": "npm test",
    "postversion": "git push --follow-tags",
    "test": "npm run lint.js && tap tests --coverage-report=lcovonly"
  },
  "repository": "github:mgsisk/eslint-config",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "eslint-config-wordpress",
    "javascript",
    "lint",
    "linter",
    "linting",
    "wordpress"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": {
    "email": "help@mgsisk.com",
    "url": "https://github.com/mgsisk/eslint-config/issues"
  },
  "homepage": "https://github.com/mgsisk/eslint-config",
  "dependencies": {
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsdoc": "^3.9.1",
    "eslint-plugin-sonarjs": "^0.2.0"
  },
  "devDependencies": {
    "@mgsisk/remark-lint-config": "^0.1.1",
    "eslint": "^5.9.0",
    "jsonlint-cli": "^1.0.1",
    "remark-cli": "^6.0.1",
    "tap": "^12.1.0",
    "yaml-lint": "^1.2.4"
  },
  "peerDependencies": {
    "eslint": ">= 5.9.0"
  }
}
