{
  "name": "@mgsisk/eslint-config",
  "version": "2.0.0",
  "description": "Opinionated ESLint configurations for JavaScript development.",
  "main": "index.js",
  "scripts": {
    "fix.js": "eslint . --fix",
    "fix.md": "remark . .github/ --ignore-pattern 'LICENSE*' -o",
    "fix.sh": "shellcheck *.sh -f diff | git apply",
    "lint.js": "eslint .",
    "lint.json": "YAMLLINT_SCHEMA=JSON_SCHEMA yamllint '**/*.json' '**/.*.json'",
    "lint.md": "remark . .github/ --ignore-pattern 'LICENSE*'",
    "lint.sh": "shellcheck *.sh",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "test": "tap test",
    "preversion": "npm test",
    "version": "git add --all",
    "postversion": "git push --follow-tags"
  },
  "repository": "github:mgsisk/eslint-config",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "eslint-config-wordpress",
    "javascript",
    "lint",
    "linter",
    "linting",
    "wordpress"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": "https://github.com/mgsisk/eslint-config/issues",
  "homepage": "https://github.com/mgsisk/eslint-config#readme",
  "funding": "https://github.com/mgsisk/eslint-config?sponsor=1",
  "files": [
    "wordpress.js"
  ],
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "dependencies": {
    "@wordpress/eslint-plugin": "^8.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-sonarjs": "^0.5.0"
  },
  "peerDependencies": {
    "eslint": ">= 7"
  },
  "devDependencies": {
    "@mgsisk/remark-lint-config": "^0.4.0",
    "eslint": "^7.10.0",
    "remark-cli": "^8.0.1",
    "shellcheck": "^0.4.4",
    "tap": "^14.10.8",
    "yaml-lint": "^1.2.4"
  },
  "eslintIgnore": [
    "coverage/",
    "node_modules/"
  ]
}
