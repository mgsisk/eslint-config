{
  "name": "@mgsisk/eslint-config",
  "version": "1.0.0",
  "description": "Opinionated ESLint configurations for JavaScript development.",
  "main": "index.js",
  "scripts": {
    "lint.js": "eslint -c index.js '**/*.js' '**/.*.js'",
    "lint.json": "printf 'package-lock.json package.json' | xargs -n1 jsonlint -q",
    "lint.md": "remark . .github/ --ignore-pattern 'LICENSE*'",
    "lint.sh": "shellcheck *.sh",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "test": "tap test",
    "preversion": "npm test",
    "version": "git add --all",
    "postversion": "git push --follow-tags"
  },
  "repository": "github:mgsisk/eslint-config",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "eslint-config-wordpress",
    "javascript",
    "lint",
    "linter",
    "linting",
    "wordpress"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": "https://github.com/mgsisk/eslint-config/issues",
  "homepage": "https://github.com/mgsisk/eslint-config#readme",
  "funding": "https://github.com/mgsisk/eslint-config?sponsor=1",
  "files": ["wordpress.js"],
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "dependencies": {
    "@wordpress/eslint-plugin": "^4.1.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-sonarjs": "^0.5.0"
  },
  "peerDependencies": {
    "eslint": ">= 6"
  },
  "devDependencies": {
    "@mgsisk/remark-lint-config": "^0.2.0",
    "eslint": "^6.8.0",
    "jsonlint": "^1.6.3",
    "remark-cli": "^8.0.0",
    "shellcheck": "^0.4.2",
    "tap": "^14.10.7",
    "yaml-lint": "^1.2.4"
  },
  "eslintIgnore": [
    "coverage/",
    "node_modules/"
  ]
}
