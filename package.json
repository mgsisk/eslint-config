{
  "name": "@mgsisk/eslint-config",
  "version": "0.7.0",
  "description": "Opinionated ESLint configurations for JavaScript development.",
  "main": "index.js",
  "scripts": {
    "clean": "find . -name '*.DS_Store' -type f -delete",
    "lint.js": "eslint -c index.js '**/*.js' '**/.*.js'",
    "lint.json": "find . \\( -name '*.json' -o -name '.*.json' \\) ! -path '*/node_modules/*' ! -path '*/vendor/*' ! -path '*/.nyc_output/*' | xargs -L1 jsonlint -q",
    "lint.md": "remark .",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "preversion": "npm test",
    "postversion": "git push --follow-tags",
    "test": "tap tests --coverage-report=lcovonly"
  },
  "repository": "github:mgsisk/eslint-config",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "eslint-config-wordpress",
    "javascript",
    "lint",
    "linter",
    "linting",
    "wordpress"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": "https://github.com/mgsisk/eslint-config/issues",
  "homepage": "https://github.com/mgsisk/eslint-config",
  "dependencies": {
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsdoc": "^4.1.1",
    "eslint-plugin-sonarjs": "^0.3.0"
  },
  "devDependencies": {
    "@mgsisk/remark-lint-config": "^0.1.2",
    "eslint": "^5.14.1",
    "jsonlint": "^1.6.3",
    "remark-cli": "^6.0.1",
    "tap": "^12.5.3",
    "yaml-lint": "^1.2.4"
  },
  "peerDependencies": {
    "eslint": ">= 5.9.0"
  }
}
